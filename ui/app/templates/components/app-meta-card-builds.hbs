<Card>
    <Card::Header>
        <h4>
            {{inline-svg "source-file" class="icon"}}
            Latest builds
        </h4>
        <LinkTo @route="workspace.projects.project.app.builds">
            View all builds
        </LinkTo>
    </Card::Header>
    {{#if this.firstBuild}}
    <AppMetaItem::LatestBuild @model={{this.firstBuild }} />
    {{/if}}
    <div class="app-meta-item">
        <ul class="app-meta-item-info">
            {{#each this.builds as |build|}}
            <AppMetaItem::Build @model={{build}} />
            {{/each}}
        </ul>
    </div>
</Card>