<button class="button button--secondary" {{on "click" this.toggleHint}}>
  {{inline-svg "upload" class="icon"}}
  <span>Deploy...</span>
</button>

{{#if hintIsVisible}}
  <div class="cli-hint">
    <p>To deploy this build you can run the following command in the CLI</p>
    <CopyableCode @ref="deploy-cli-hint">
      <pre><code id="deploy-cli-hint">waypoint deploy {{@id}}</code></pre>
    </CopyableCode>
    <small><a href="#">Read more in our documentation</a></small>
  </div>
  <div class="cli-hint-overlay" {{on "click" this.toggleHint}}></div>
{{/if}}