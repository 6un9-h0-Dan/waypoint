<div class="artifact-overview">
  <table>
    <tbody>
      {{#if @statusReport}}
        <tr>
          <th scope="row">
            Image
          </th>
          <td>
            <ContainerImageTag @statusReport={{@statusReport}}/>
          </td>
        </tr>
        <tr>
          <th scope="row">Health Check</th>
          <td>
            <div class="status-indicator">
              <StatusReportIndicator @statusReport={{@statusReport}} /> &nbsp;
              <Pds::Button @variant="ghost" @iconStart="refresh-default" disabled={{this.isRefreshRunning}} {{on "click" this.refreshHealthCheck}}>
                Re-run
              </Pds::Button>
            </div>
          </td>
        </tr>
      {{else}}
        Currently unavailable
      {{/if}}
    </tbody>
  </table>
</div>
