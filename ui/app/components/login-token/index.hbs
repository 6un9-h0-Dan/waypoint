<form {{action 'login' on='submit'}} class="login">
  <fieldset>
    <label>{{t 'login.instruction'}}</label>
    <CopyableCode @ref="waypoint-token-new">
      <pre><code id="waypoint-token-new">waypoint token new</code></pre>
    </CopyableCode>
    <small><ExternalLink href="https://waypoint.vercel.app/commands/token-new">Read more in our documentation</ExternalLink></small>
  </fieldset>

  <fieldset>
    <label for="token-field">{{t 'login.input.label'}}</label>
    <Input
      autofocus
      data-test-login=true
      @value={{this.token}}
      id="token-field"
      placeholder={{t 'login.input.placeholder'}} />
  </fieldset>

  <button
    data-test-login-submit
    {{action "login"}}
    type="button"
    class="button button--primary">
    {{t 'login.button'}}
  </button>
</form>