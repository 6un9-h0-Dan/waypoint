<h3>Exec</h3>

<div class="output-pane">
  {{#if hasExec}}
    <div class="output">
      <code>A line of output</code>
      <code>Another line of output</code>
    </div>
  {{else}}
    <EmptyState>
      <p>Waiting for input</p>
      <p>You can run commands against the server by typing below</p>
    </EmptyState>
  {{/if}}

  <div class="run-prompt">
    {{inline-svg "chevron-right" class="prompt-icon"}}
    <input type="text" class="run-prompt-input" />
    <button class="button button--primary">
      {{inline-svg "sub-right" class="icon"}}
      <span>Run</span>
    </button>
  </div>
</div>